    <ImageView
        android:id="@+id/iv_close_app"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_home_white"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ic_hedef_logo"
        app:layout_constraintBottom_toBottomOf="@id/ic_hedef_logo"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:id="@+id/ic_hedef_logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_hedef_logo_white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_nfc"
        android:layout_width="210dp"
        android:layout_height="310dp"
        android:src="@drawable/ic_nfc_read"
        android:layout_marginBottom="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_nfc_status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/inter_light"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="NFC Okutma işlemi için lütfen kimlik kartınızı telefonunuzun arkasına tutunuz."
        android:layout_marginHorizontal="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_nfc"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardNextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="32dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="32dp"
        android:elevation="2dp"
        android:visibility="gone"
        app:cardBackgroundColor="#E2E8F0"
        app:cardCornerRadius="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#2E384D"
            android:fontFamily="@font/inter_semi_bold"
            android:gravity="center"
            android:text="@string/go_on"/>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>