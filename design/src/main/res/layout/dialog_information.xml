<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_hedef_logo"
        android:layout_marginStart="23dp"
        android:layout_marginTop="9dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />

    <RelativeLayout
        android:id="@+id/rl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/cardContinueBtnView"
        android:layout_below="@+id/ivLogo"
        android:layout_marginTop="10dp"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/imgCloseBtnView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:padding="20dp"
            android:src="@drawable/ic_close_img" />

        <FrameLayout
            android:id="@+id/frameInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgCloseBtnView"
            android:layout_centerHorizontal="true">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animDetectionStatusView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:visibility="gone"
                app:lottie_autoPlay="false"
                app:lottie_loop="false" />

            <ImageView
                android:id="@+id/imgInfoView"
                android:layout_width="230dp"
                android:layout_height="150dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imgFrameView"
                android:layout_width="240dp"
                android:layout_height="90dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/all_white_border_transparent_bg"
                android:visibility="gone" />

        </FrameLayout>

        <TextView
            android:id="@+id/tvInfoTitleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frameInfo"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/nexa_slab_bold"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvInfoContentView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvInfoTitleView"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/nunito_sans_regular"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/cbSignLangView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvInfoContentView"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:checked="false"
            android:padding="10dp"
            android:text="@string/sign_checkbox_text"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="gone" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/cardContinueBtnView"
        android:layout_below="@+id/ivLogo"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <!-- Başlık -->
            <TextView
                android:id="@+id/tvAdimlar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Adımlar"
                android:textColor="#2E384D"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Adımlar Sekmeleri -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- Kişisel Bilgilerim -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_step_active"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/ivKisiselBilgilerim"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_person" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/inter_semi_bold"
                        android:gravity="center"
                        android:text="Kişisel Bilgilerim"
                        android:textColor="#37A311"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Kimlik Doğrulama -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_step_selected"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/ivKimlikDogrulama"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_person_2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/inter_semi_bold"
                        android:gravity="center"
                        android:text="Kimlik Doğrulama"
                        android:textColor="#8798AD"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Sözleşme Onayları -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_step_inactive"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/ivSozlesmeOnaylari"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_document" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:text="Sözleşme Onayları"
                        android:textColor="#A0A0A0"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Yerindelik Testi -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_step_inactive"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/ivYerindelikTesti"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_document" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:text="Yerindelik\nTesti"
                        android:textColor="#A0A0A0"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_title_icon"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="45dp"
                android:scaleType="centerInside"
                tools:src="@drawable/ic_nfc" />


            <!-- Kimlik Ön Yüzü Başlık -->
            <TextView
                android:id="@+id/tv_cart_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:text="Kimlik Ön Yüzü"
                android:textColor="#2E384D"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Açıklama -->
            <TextView
                android:id="@+id/tv_cart_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="8dp"
                android:text=""
                android:textColor="#8798AD"
                android:textSize="14sp" />

            <!-- Kamerayı Aç Butonu -->
            <!--   <Button
                android:id="@+id/btnKamerayiAc"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Kamerayı Aç"
                android:textAllCaps="false"
                android:background="@drawable/bg_base_button_gray"
                android:textColor="@color/dark_blue"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp"/>-->

            <!-- Bilgilendirme -->
            <TextView
                android:id="@+id/tv_cart_desc_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="8dp"
                android:text="Eğer daha önce kameraya erişim için onay vermediyseniz gerekli uyarı ekranı çıktığında onay vermelisiniz."
                android:textColor="#8798AD"
                android:textSize="13sp" />

            <!-- Devam ve Geri Butonları -->
            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btnDevam"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_base_button_gray"
                    android:text="Devam"
                    android:textAllCaps="false"
                    android:enabled="false"
                    android:textColor="@color/dark_blue"/>

                <Button
                    android:id="@+id/btnGeri"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Geri"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_base_button_light_gray"
                    android:textColor="#2E384D"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>-->

        </LinearLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardContinueBtnView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="13dp"
        app:cardBackgroundColor="#E2E8F0"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tv_card_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/inter_semi_bold"
            android:text="@string/go_on"
            android:textColor="#2E384D"/>


    </androidx.cardview.widget.CardView>
</RelativeLayout>
